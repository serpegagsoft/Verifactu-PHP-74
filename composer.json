{
    "name": "serpegagsoft/verifactu-php-74",
    "description": "Librería para la implementación del sistema VERI*FACTU de la AEAT española",
    "keywords": ["verifactu", "aeat", "sii"],
    "license": "MIT",
    "homepage": "https://github.com/josemmo/Verifactu-PHP",
    "authors": [
        {
            "name": "josemmo",
            "email": "josemmo@pm.me",
            "homepage": "https://github.com/josemmo"
        }
    ],
    "scripts": {
        "lint": "composer validate --strict && phpstan analyse",
        "test": "phpunit --testdox --colors=always tests"
    },
    "autoload": {
        "psr-4": {
            "josemmo\\Verifactu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "josemmo\\Verifactu\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.8",
        "josemmo/uxml": "^0.1.4",
        "benmorel/weakmap-polyfill": "^0.5.0"
    },
    "config": {
        "platform": {
            "php": "7.4.33"
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^9.5"
    }
}
